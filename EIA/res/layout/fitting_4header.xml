<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/twoColumns"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black" >

    <ImageView
        android:id="@+id/activityIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:contentDescription="Item Icon"
        android:src="@drawable/fitsdirector" />

    <LinearLayout
        android:id="@+id/fittingSelectionBlock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/activityIcon"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/fittingSpinnerBlock"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/selectFittingLabel"
                style="@style/AppTheme.ItemNameStyle"
                android:text="Select Fitting:" />

            <Spinner
                android:id="@+id/fittingspinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/locationFunctions"
                android:prompt="@string/fittingSpinnerLabel"
                android:textColor="#FF0000FF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fittingCountBlock"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/selectCountLabel"
                style="@style/AppTheme.ItemNameStyle"
                android:text="Copies:" />

            <Spinner
                android:id="@+id/copiesSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/copiesSpinnerList"
                android:prompt="@string/copiesSpinnerLabel"
                android:textColor="#FF0000FF" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>