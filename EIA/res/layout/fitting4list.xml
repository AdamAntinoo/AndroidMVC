<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blacktraslucent40" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/itemIcon"
            style="@style/ItemIcon.Style.Size48" />

        <org.dimensinfin.evedroid.core.Din1451TextView
            android:id="@+id/fittingName"
            style="@style/Name.Style.Clickable.14"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/itemIcon"
            android:singleLine="true"
            android:text="@string/default_fittingname" />

        <org.dimensinfin.evedroid.core.Din1451EngTextView
            android:id="@+id/fittingClass"
            style="@style/Name.Style.14"
            android:layout_below="@+id/fittingName"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/itemIcon"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:text="@string/default_fittingclass" />

        <org.dimensinfin.evedroid.core.Din1451TextView
            android:id="@+id/fittingCost"
            style="@style/locationStationStyle"
            android:layout_below="@+id/shipName"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/itemIcon"
            android:text="0.5 Hek - Boundles Station"
            android:textSize="11sp" />
    </RelativeLayout>
</RelativeLayout>