<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scaleType="centerCrop"
    tools:context=".SafeStopActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/logoEveOnline"
            android:layout_width="269px"
            android:layout_height="92px"
            android:src="@drawable/eveonline_logo" />
    </LinearLayout>

    <TextView
        android:id="@+id/stopMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:text="There has been an unrecoverable application error. Possible causes are that the network is no more available or that the sdcard is full or not accesible. Please check your device and restart the application."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/userStopMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;User Message>"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

</LinearLayout>