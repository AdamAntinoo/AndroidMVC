<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/genericFragmentBody"
    android:layout_width="fill_parent"
    android:minHeight="40dp"
    android:minWidth="40dp"
    android:layout_height="wrap_content"
    android:background="#80000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/genericExpandableFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/strokeimagebox"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/rightArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/imageview_defaultcontent"
            android:src="@drawable/arrowright"
            android:visibility="visible" />

        <TextView
            android:id="@+id/fragmentLabel"
            style="@style/collapsedFragmentLabelStyle"
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/contentCount"
            android:layout_toRightOf="@+id/rightArrow"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="FRAGMENT LABEL"
            android:textSize="12dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/contentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:minWidth="30dp"
            android:paddingTop="4dp"
            android:text="320"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:visibility="gone" />

        <include
            android:id="@+id/progressLayout"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            layout="@layout/actionbar_indeterminateprogress"
            android:padding="2dp" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:indeterminateDrawable="@drawable/progressspinner"
            android:padding="3dp"
            android:visibility="gone" >
        </ProgressBar>

        <ListView
            android:id="@+id/fragmentList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rightArrow"
            android:layout_margin="2dp"
            android:layout_marginTop="0dp"
            android:dividerHeight="2dp"
            android:paddingBottom="2dp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>